<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="ThemeOverlay.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="icon">@drawable/ic_launcher</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="actionBarStyle">@style/AppTheme.OrangeActionBar</item>
    	<item name="android:actionBarStyle">@style/AppTheme.OrangeActionBar</item>
    	<item name="actionOverflowButtonStyle">@style/CustomMenuBtn</item>
    	<item name="android:actionOverflowButtonStyle">@style/CustomMenuBtn</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="icon">@drawable/ic_launcher</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="actionBarStyle">@style/AppTheme.OrangeActionBar</item>
    	<item name="android:actionBarStyle">@style/AppTheme.OrangeActionBar</item>
    	<item name="actionOverflowButtonStyle">@style/CustomMenuBtn</item>
    	<item name="android:actionOverflowButtonStyle">@style/CustomMenuBtn</item>
    </style>
    <style name="CustomMenuBtn" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/menu_more</item>
    </style>
    <style name="OverlayActionbar" parent="Theme.AppCompat.Light">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
    	<item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
    	<item name="actionOverflowButtonStyle">@style/CustomMenuBtn</item>
    	<item name="android:actionOverflowButtonStyle">@style/CustomMenuBtn</item>
    </style>
    <style name="ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/normal_btn</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>
    <style name="MyActionBar" parent="android:style/Widget.Holo.Light.ActionBar">
	    <item name="android:background">@drawable/menu_more</item>
	</style>
    <style name="AppTheme.ActionBar" parent="@style/Widget.AppCompat.ActionBar">
	    <item name="background">@android:color/transparent</item>
	    <item name="android:background">@android:color/transparent</item>
	</style>
	<style name="AppTheme.OrangeActionBar" parent="@style/Widget.AppCompat.ActionBar">
	    <item name="background">@drawable/orange_tiles</item>
	    <item name="android:background">@drawable/orange_tiles</item>
	</style>
	<style name="AppTheme.TabWidget" parent="@android:style/Widget.TabWidget">
	    <item name="background">@drawable/orange_tiles</item>
	    <item name="android:background">@drawable/orange_tiles</item>
	</style>
	<style name="AppTheme.TabText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">2</item>
    </style>
</resources>