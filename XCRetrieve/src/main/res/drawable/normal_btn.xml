<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <layer-list >
            <item ><bitmap android:src="@drawable/yellow_bg_s" android:tileMode="repeat"/></item>
            <item ><shape android:shape="rectangle"><solid android:color="@color/transparent"/><stroke android:width="1dp" android:color="#66000000"/></shape></item>
        </layer-list>
    </item>
    <item android:state_pressed="false">
        <layer-list >
            <item ><bitmap android:src="@drawable/grey_green_bg_s" android:tileMode="repeat"/></item>
            <item ><shape android:shape="rectangle"><solid android:color="@color/transparent"/><stroke android:width="1dp" android:color="#66000000"/></shape></item>
        </layer-list>
    </item>
</selector>